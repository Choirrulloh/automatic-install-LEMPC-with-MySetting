server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/public;
    index index.php;
    server_name domainName;
    if (!-e \$request_filename) {
        rewrite ^/(.*)$ /index.php?/\$1 last;
        break;
    }
    location / {
        try_files \$uri \$uri/ =404;
    }
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php7.4-fpm.sock;
    }
    location ~ /\.ht {
        deny all;
    }
}